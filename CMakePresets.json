{
    "version": 6,
    "include": [],
    "configurePresets": [
        {
            "name": "ci-Base",
            "hidden": true,
            "environment": {
                "GNU_FLAGS": "-Wall -Werror -Wextra -Wpedantic -Wformat=2 -Wno-unused-parameter -Wshadow -Wwrite-strings -Wstrict-prototypes -Wold-style-definition -Wredundant-decls -Wnested-externs -Wmissing-include-dirs",
                "CMAKE_POLICY_VERSION_MINIMUM": "3.5"
            },
            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "1"
            }
        },
        {
            "name": "ci-DebugBase",
            "hidden": true,
            "inherits": "ci-Base",
            "binaryDir": "build/db",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "debug",
                "CMAKE_C_FLAGS": "$env{GNU_FLAGS} -g3 -O0 -fsanitize=address -fsanitize=leak"
            }
        },
        {
            "name": "ci-ReleaseBase",
            "hidden": true,
            "inherits": "ci-Base",
            "binaryDir": "build/rel",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_C_FLAGS": "$env{GNU_FLAGS}"
            }
        },
        {
            "name": "ci-RelWithDebInfoBase",
            "hidden": true,
            "inherits": "ci-Base",
            "binaryDir": "build/reldb",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo",
                "CMAKE_C_FLAGS": "$env{GNU_FLAGS}"
            }
        },
        {
            "name": "ci-ninja-db",
            "inherits": "ci-DebugBase",
            "displayName": "Ninja Debug",
            "generator": "Ninja"
        },
        {
            "name": "ci-ninja-rel",
            "inherits": "ci-ReleaseBase",
            "displayName": "Ninja Release",
            "generator": "Ninja"
        },
        {
            "name": "ci-ninja-rel-db",
            "inherits": "ci-RelWithDebInfoBase",
            "displayName": "Ninja RelWithDebInfo",
            "generator": "Ninja"
        }
    ],
    "buildPresets": [
        {
            "name": "ci-base",
            "hidden": true
        },
        {
            "name": "ci-debug",
            "inherits": "ci-base",
            "configurePreset": "ci-ninja-db"
        },
        {
            "name": "ci-release",
            "targets": [
                "scraper",
                "tests"
            ],
            "configurePreset": "ci-ninja-rel"
        },
        {
            "name": "ci-rel-db",
            "targets": [
                "scraper"
            ],
            "configurePreset": "ci-ninja-rel-db"
        }
    ]
}